<div class="travel-plan-banner mb-5">
    <div class="small-page-container travel-plan-banner-container ">
        <div class="breadcrumb">
        <%= link_to trips_path do %>
            <i class="fas fa-angle-left"></i>
            All Trips
        <% end %>
        </div>

        <div class="user_banner">
            <div class="itinerary-info">
                <div class="mb-3">
                    <% if policy(trip).edit? %>
                        <%= link_to "Edit travel plan", edit_trip_path(trip), class: "btn btn-outlined" %>
                    <% end %>
                </div>
                <h1><%= trip.title %></h1>
                <div class="d-flex">
                    <div class="js-heart-trip">
                        <%= render 'shared/components/heart', element: trip %>
                    </div>
                    <p class="ml-3"><%= pluralize(trip.total_time, "day") %> plan </p>
                </div>
                <p><%= trip.description %></p>

                <!-- Tags on Itineraries if present-->
                <%# if @trip.user.tags.present? %>
                <%# @trip.user.tags.each do |tag| %>
                    <%# <span class="tag-outline"><%= tag.tag_name </span> %>
                <%# end %>
                <%# end %>

            </div>
            <div>
                <div>
                    <%= render "shared/components/user_info_block" %>
                </div>
            </div>
        </div>
        
    </div>
</div>