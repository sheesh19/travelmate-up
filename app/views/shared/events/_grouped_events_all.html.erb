<!-- Upcoming events grouped by dates -->

<% events.group_by_month { |e| e[:start_date] }.each do |eventgroup| %>
  <% if eventgroup[0] >= Date.today %>
    <h6><%= eventgroup[0].strftime("%b %Y") %></h6>
    <div class="grid-two">
    <% eventgroup[1].each do |event| %>
        <%= render partial: 'shared/cards/event_card', 
            locals: { 
              element: event,
              class_type: "reminder-card-text-image-stack"
            }
          %>
    <% end %>
    </div>
  <% end %>
<% end %>
