<% if element.photos.empty? %>
    <div class="banner__image"
    style="background-image: linear-gradient(rgba(0,0,0,0.5),
      rgba(0,0,0,0.5)),
      url(https://images.unsplash.com/photo-1502920514313-52581002a659?ixlib=rb-1.2.1&ixid=eyJhcHBfaWQiOjEyMDd9&auto=format&fit=crop&w=1647&q=80)">
<% else %>
    <div class="banner__image"
    style="background-image: linear-gradient(rgba(0,0,0,0.5),
      rgba(0,0,0,0.5)),
      url('<%= cl_image_path element.photos.first.key %>')">
<% end %>

        <div class="banner-container d-flex align-items-center">
            <h1><%= title %></h1>
        </div>
    </div>