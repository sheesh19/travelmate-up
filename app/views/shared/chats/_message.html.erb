<div class="message-container chat-messages <%= message.user == current_user ? 'message-owner' : 'message-mate' %>"
  id="sender-<%= message.user.id %>">

  <i class="author">
    <span><%= message.user.first_name %></span>
    <small><%= message.created_at.strftime("%a %b %e at %l:%M%p") %></small>
  </i>

  <p><%= message.content %></p>
</div>
