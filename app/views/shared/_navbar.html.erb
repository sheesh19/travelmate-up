<div class="navbar navbar-expand-sm navbar-light navbar-mt">
  
  <!-- TravelMates Logo -->
  <%= link_to root_path, class: "navbar-brand" do %>
    <span class="logo-start">travel</span>
    <span id="logo-end">mates</span>
  <% end %>

  <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
    <span class="navbar-toggler-icon"></span>
  </button>


  <div class="collapse navbar-collapse" id="navbarSupportedContent">
    <ul class="navbar-nav mr-auto">
      <% if user_signed_in? %>
        <li class="nav-item">
          <%= link_to "EXPLORE", root_path, class: "nav-link" %>
        </li>
        <li class="nav-item">
          <%= link_to "FIND MATES", events_path, class: "nav-link" %>
        </li>
        <li class="nav-item">
          <%#= link_to "PLAN YOUR TRIP", '#', class: "nav-link" %>
        </li>
        <li class="nav-item">
          <%#= link_to "MANAGE TRIPS", '#', class: "nav-link" %>
        </li>
        
      <% else %>
        <li class="nav-item">
          <%= link_to "EXPLORE", root_path, class: "nav-link" %>
          <%= link_to "LOGIN", new_user_session_path, class: "nav-link" %>
        </li>
      <% end %>

      <!-- DISPLAY BUTTON && AVATAR -->
      <% if user_signed_in? %>
        <div class="sidebar-primary-button m-auto">
          <%= render "shared/components/button", variant: "filled", label: "CREATE NEW TRIP", path: new_trip_path %>
        </div>
        <li class="nav-item dropdown px-2 m-auto">
          <%= image_tag "https://kitt.lewagon.com/placeholder/users/sheesh19", class: "avatar dropdown-toggle", id: "navbarDropdown", data: { toggle: "dropdown" }, 'aria-haspopup': true, 'aria-expanded': false %>
          <div class="dropdown-menu dropdown-menu-right" aria-labelledby="navbarDropdown">
            <%= link_to "Log out", destroy_user_session_path, method: :delete, class: "dropdown-item" %>
          </div>
        </li>

      <% else %>
        <div class="sidebar-primary-button">
          <%= render "shared/components/button", variant: "filled", label: "LOG IN", path:  new_user_session_path %>
        </div>
      <% end %>

    </ul>
  </div>
</div>
