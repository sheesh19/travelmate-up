<h2 class="featured-time  pt-3">ALL EVENTS</h2>

<div class="itinerary">

    <% if @all_events.count == 0 %>
        <div class="empty-state pt-5 pb-5 mt-5 mb-5">
            <p><strong>You have 0 previous events.</strong></p>
        </div>
    <% else %>

            <%= render partial: 'shared/events/grouped_past_events', 
                locals: { 
                    events: @all_events,
                    class_type: "reminder-card-text-image-stack"
                }
            %>
    <% end %>

</div>
