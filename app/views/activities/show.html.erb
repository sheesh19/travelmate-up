<%= render 'activities/show/banner', activity: @activity %>

<%= render partial: 'activities/show/event_activities',
    locals: {
        title: "UPCOMING #{@activity.title.upcase} EVENTS",
        activity: @activity,
        events: @activity.upcoming_events
    }
%>

<%= render partial: 'activities/show/location_activities',
    locals: {
        activity: @activity,
        location: @activity.activity_locations
    }
%>

<%= render partial: 'shared/events/all_events_bottom', 
    locals: {
        events: @activity.events,
        title: "ALL #{@activity.title.upcase} EVENTS"
    }
%>